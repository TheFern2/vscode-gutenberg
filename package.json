{
	"name": "vscode-gutenberg",
	"displayName": "Gutenberg",
	"description": "Print a markdown book to pdf, doc, or html",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-gutenberg.printBook"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-gutenberg.printBook",
				"title": "gutenberg: Print Book"
			}
		],
		"configuration": {
			"title": "Gutenberg",
			"properties": {
				"gutenberg.useFolders": {
					"type":"boolean",
					"default": true,
					"description": "Whether vscode workspace is using folders for chapters"
				},
				"gutenberg.useDifferentRootPath": {
					"type":"string",
					"default": "",
					"description": "By default gutenberg reads workspace rootPath, if your book is within a folder, specify the path to be used"
				},
				"gutenberg.inputExtension": {
					"type":"string",
					"default": "md",
					"description": "Input files extension"
				},
				"gutenberg.outputExtension": {
					"type":"string",
					"default": "pdf",
					"description": "Output file extension"
				},
				"gutenberg.ignoreFoldersOrFiles": {
					"type":"array",
					"default": [
						"images"
					],
					"description": "Folders or Files to be ignored from the book print"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
